{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateCorrespondenceRequest",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "title": "Mode",
      "enum": ["In-Person", "Email"],
      "format": "dropdown"
    },
    "medallion_number": {
      "type": "string",
      "title": "Medallion Number"
    },
    "driver_id": {
      "type": "string",
      "title": "Driver ID"
    },
    "vehicle_id": {
      "type": "string",
      "title": "Vehicle ID"
    },

    "note": {
      "type": "string",
      "title": "Note"
    },
    "date": {
      "type": "string",
      "format": "date",
      "title": "Date"
    },
    "time_sent": {
      "type": "string",
      "format": "time",
      "title": "Time Sent"
    },
    "text": {
      "type": "string",
      "title": "Text Message"
    },
    "email": {
      "type": "string",
      "format": "email",
      "title": "Email Address"
    }
  }
}
